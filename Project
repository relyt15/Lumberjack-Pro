import java.util.Scanner;

public class Project {
    
    //------------------------------------------------------------------------
    // Setting up variables and a scanner
    //------------------------------------------------------------------------
    private String projectName;
    private String projectDescription;
    private String projectStatus;
    private String projectDueDate;
    private boolean projectCompleted;
    Scanner scan = new Scanner(System.in);
    
    
    public Project(String name, String description, String dueDate)
    {
        projectName = ("");
        projectDescription = ("");
        projectStatus = ("");
        projectDueDate = ("");
        projectCompleted = false;
        
    } // end of Project Constructor
    
   public String setProjectName()
   {
       projectName = scan.nextLine();
       return projectName;
   } // end setProjectName
   
   public String setProjectDescription()
   {
       projectDescription = scan.nextLine();
       return projectDescription;
   } // end setProjectDescription
   
   public String setProjectStatus()
   {
       projectStatus = scan.nextLine();
       return projectStatus;
   } // end setProjectStatus
   
   public String getProjectName()
   {
       return projectName;   
   } // end getProjectName
   
   public String getProjectDescription()
   {
       return projectDescription;
   } // end getProjectDescription
   
   public String getProjectDueDate()
   {
       return projectDueDate;
   } // end getProjectDueDate
   
   public boolean isProjectCompleted()
   {
       return projectCompleted;
   } // end isProjectCompleted
   
   public void setProjectCompleted()
   {
       projectCompleted = true;
   } // end setProject Completed
   
   
    
} //end of Project Class
