import java.util.Scanner;

public class Task {
    
    // Task attributes
    private String taskName;
    private String taskDescription;
    private String taskStatus;
    private String taskDueDate;
    private boolean taskCompleted;

    // Constructor to initialize the Task object
    public Task(String name, String description, String dueDate) 
    {
        this.taskName = name;
        this.taskDescription = description;
        this.taskDueDate = dueDate;
        this.taskStatus = "Pending"; // Default status
        this.taskCompleted = false;  // Default not completed
    } // end of task constructor
    
    
    //------------------------------------------------------------------------
    // Setting up methods to get and modify all data
    //------------------------------------------------------------------------
   public String setTaskName()
   {
       this.taskName = taskName;
       return taskName;
   } // end setName
   
   public String setTaskDescription()
   {
       this.taskDescription = taskDescription;
       return taskDescription;
   } // end setTaskDescription
   
   public void setTaskStatus()
   {
       this.taskStatus = taskStatus;
   } // end setTask Status
   
   public String getTaskName()
   {
       return taskName;   
   } // end getTaskName
   
   public String getTaskDescription()
   {
       return taskDescription;
   } // end getTaskDescription
   
   public String getTaskDueDate()
   {
       return taskDueDate;
   } // end getTaskDueDate
   
   public boolean isTaskCompleted()
   {
       return taskCompleted;
   } // end isCompleted
   
   public void setTaskCompleted()
   {
        this.taskCompleted = true;
        this.taskStatus = "Completed";
   } // end setTask Completed
   
   
    
} //end of Task Class
